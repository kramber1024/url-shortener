{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2016",
        "checkJs": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "outDir": "./frontend/static/js/",
        "baseUrl": "./frontend/ts/",
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "frontend/static/js/*",
        "htmlcov/*",
    ],
    "include": [
        "frontend/ts/*"
    ]
}
